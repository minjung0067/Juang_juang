<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>         <!--타이틀바 (앱 이름 나오는 바)-->
        <item name="colorPrimaryDark">#B2E1E1E1</item>  //상태바  (와이파이 보여주는 바)
        <item name="colorAccent">@color/colorAccent</item>
        <!-- No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlActivated">@color/pointColor</item>      //선택된(포커스) 상태의 밑줄 색
        <item name="colorControlNormal">@color/grayColor</item>          //선택되지 않은 상태의 밑줄 색
        <item name="android:textSelectHandle">@color/mainColor</item>   //손잡이 부분 색상
        <item name="android:textCursorDrawable">@color/mainColor</item> //커서색
        <item name="android:textColorHighlight">@color/subColor</item> //텍스트 선택색
    </style>

</resources>