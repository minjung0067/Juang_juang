    <ImageButton
        android:id="@+id/calendar_btn"
        android:layout_width="70px"
        android:layout_height="200px"
        android:layout_marginStart="62dp"
        android:layout_marginBottom="4dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/calender_btn"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/calendar_icon"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="62dp" />


    <ImageButton
        android:id="@+id/main_btn"
        android:layout_width="70px"
        android:layout_height="200px"
        android:layout_marginStart="127dp"
        android:layout_marginEnd="126dp"
        android:layout_marginBottom="4dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/compose_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/setting_btn"
        app:layout_constraintStart_toEndOf="@+id/calendar_btn"
        app:layout_constraintTop_toBottomOf="@+id/calendar_layout"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/setting_btn"
        android:layout_width="70px"
        android:layout_height="200px"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="4dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/setting_icon"
        tools:ignore="MissingConstraints"
        android:layout_marginRight="62dp" />






</androidx.constraintlayout.widget.ConstraintLayout>