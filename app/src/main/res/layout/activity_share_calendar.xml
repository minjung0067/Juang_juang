<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/mainColor">

    <!-- Activity Layout XML -->
    <!-- @author croute -->
    <!-- @since 2011.03.08 -->

    <TextView
        android:id="@+id/gam_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:text="언제"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gam_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:text="감"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/pointColor"
        app:layout_constraintStart_toEndOf="@+id/gam_text"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_addcal"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="3dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/add_eventt"
        app:layout_constraintEnd_toStartOf="@+id/btn_mypage"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_mypage"
        android:layout_width="86dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/gam8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calendar_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="6dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/main_btn"
        app:layout_constraintTop_toBottomOf="@+id/gam_text"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="#ffffff">

                <ImageButton
                    android:id="@+id/last_month_btn"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/last_month_big"
                    android:scaleType="fitCenter"
                    android:background="#ffffff"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/gv_calendar_activity_tv_title"
                    android:layout_width="127dp"
                    android:layout_height="46dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="@dimen/space_3x"
                    android:layout_marginRight="@dimen/space_3x"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="2021년 몇월"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/next_month_btn"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/next_month_big"
                    android:scaleType="fitCenter"
                    android:background="#ffffff"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_Sunday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="일"
                    android:textSize="15dp"
                    android:textColor="@color/mainColor"
                    android:layout_marginHorizontal="@dimen/space_2x"/>

                <TextView
                    android:id="@+id/tv_Monday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_marginHorizontal="@dimen/space_3x" />

                <TextView
                    android:id="@+id/tv_Tuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="화"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_marginHorizontal="@dimen/space_3x" />

                <TextView
                    android:id="@+id/tv_Wednesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_marginHorizontal="@dimen/space_3x" />

                <TextView
                    android:id="@+id/tv_Thursday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="목"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_marginHorizontal="@dimen/space_3x" />

                <TextView
                    android:id="@+id/tv_Friday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="금"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:layout_marginHorizontal="@dimen/space_3x" />

                <TextView
                    android:id="@+id/tv_Saturday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="토"
                    android:textSize="15dp"
                    android:textColor="@color/pointColor"
                    android:layout_marginHorizontal="@dimen/space_2x"
                    android:layout_marginRight="10dp"/>


            </LinearLayout>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="#B9B3BD"/>

            <GridView
                android:id="@+id/gv_calendar_activity_gv_calendar"
                android:layout_width="408dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="#FFFFFF"
                android:listSelector="@drawable/grideview_selector"
                android:numColumns="7"
                android:stretchMode="columnWidth"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                tools:layout_editor_absoluteX="-3dp"
                tools:ignore="MissingConstraints" />
        </LinearLayout>








    </androidx.constraintlayout.widget.ConstraintLayout>



