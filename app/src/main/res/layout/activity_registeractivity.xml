<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Registeractivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_margin="6dp"
        android:layout_weight="0"
        android:gravity="bottom|center"
        android:text="회원가입"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="292dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:gravity="left"
            android:hint="전화번호"
            android:inputType="phone"
            android:textColorHint="#A6A6A6" />

        <EditText
            android:id="@+id/edit_id"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_margin="7dp"
            android:ems="10"
            android:gravity="left"
            android:hint="아이디"
            android:inputType="textEmailAddress"
            android:textColorHint="#A6A6A6" />

        <EditText
            android:id="@+id/edit_pwd"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_margin="7dp"
            android:ems="10"
            android:gravity="left"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#A6A6A6" />

        <EditText
            android:id="@+id/edit_username"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:gravity="left"
            android:hint="이름"
            android:inputType="textPersonName"
            android:textAllCaps="false"
            android:textColor="#A6A6A6"
            android:textColorHint="#A6A6A6" />

        <EditText
            android:id="@+id/edit_birth"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_margin="7dp"
            android:clickable="true"
            android:ems="10"
            android:gravity="left"
            android:hint="생년월일"
            android:inputType="date"
            android:textColorHint="#A6A6A6" />


    </LinearLayout>

    <CheckBox
        android:id="@+id/checkagree"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:height="100dp"
        android:text="전체동의(선택항목포함)"
        android:textColor="#5A5A5A"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/agree1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:text="(필수)이용약관"
            android:textColor="#9E9E9E"
            android:textSize="10sp" />

        <CheckBox
            android:id="@+id/agree2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:text="(필수) 개인정보 수집 및 이용에 대한 안내"
            android:textColor="#9E9E9E"
            android:textSize="10sp" />

        <CheckBox
            android:id="@+id/agree3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:text="(필수) 이벤트, 광고성 정보 안내"
            android:textColor="#9E9E9E"
            android:textSize="10sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#FF6100"
        android:text="회원가입"
        android:layout_margin="3dp"
        android:textColor="#FFFFFF" />


</LinearLayout>