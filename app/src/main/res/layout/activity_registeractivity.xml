<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.example.persimmon_tree_proj.Registeractivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_margin="6dp"
        android:layout_marginTop="100dp"
        android:layout_weight="0"
        android:gravity="bottom|center"
        android:text="회원가입"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText_Phone"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:gravity="left"
            android:hint="전화번호"
            android:inputType="phone"
            android:textColorHint="#A6A6A6"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editText_id"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_margin="7dp"
            android:ems="10"
            android:gravity="left"
            android:hint="아이디"
            android:inputType="textEmailAddress"
            android:textColorHint="#A6A6A6"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editText_passWord"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_margin="7dp"
            android:ems="10"
            android:gravity="left"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:textColorHint="#A6A6A6"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editText_name"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:gravity="left"
            android:hint="이름"
            android:inputType="textPersonName"
            android:textAllCaps="false"
            android:textColorHint="#A6A6A6"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_birth"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_margin="7dp"
            android:clickable="true"
            android:ems="10"
            android:gravity="left"
            android:hint="생년월일(숫자 6개 입력)"
            android:inputType="date"
            android:textColorHint="#A6A6A6"
            android:textSize="16sp" />


    </LinearLayout>

    <CheckBox
        android:id="@+id/check_all"
        android:layout_width="343dp"
        android:layout_height="44dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:height="100dp"
        android:text="전체동의(선택항목포함)"
        android:textColor="#5A5A5A"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check_1"
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:text="(필수)이용약관"
                android:textColor="#9E9E9E"
                android:textSize="10sp" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="18dp"
                android:layout_height="32dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="보기"
                android:textColor="#9E9E9E"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/check_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:text="(필수) 개인정보 수집 및 이용에 대한 안내"
                android:textColor="#9E9E9E"
                android:textSize="10sp" />


            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="47dp"
                android:layout_height="32dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="보기"
                android:textColor="#9E9E9E"
                android:textSize="10sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/check_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:text="(선택) 이벤트, 광고성 정보 안내"
                android:textColor="#9E9E9E"
                android:textSize="10sp" />


            <Button
                android:layout_width="10dp"
                android:layout_height="32dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="보기"
                android:textColor="#9E9E9E"
                android:textSize="10sp"
                style="?android:attr/borderlessButtonStyle"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_join"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="3dp"
        android:layout_marginTop="10dp"
        android:background="#FE8738"
        android:text="회원가입"
        android:textColor="#FFFFFF" />


</LinearLayout>