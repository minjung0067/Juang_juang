<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    tools:context="com.example.persimmon_tree_proj.MypageActivity">

    <Button
        android:id="@+id/go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="130dp"
        android:src="@drawable/abc_vector_test"
        android:text="프로필수정"
        app:layout_constraintBottom_toTopOf="@+id/profile_text" />

    <TextView
        android:id="@+id/profile_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginRight="120dp"
        android:height="30dp"
        android:text="프로필"
        android:textSize="17sp" />

    <Button
        android:id="@+id/profile_image"
        android:layout_width="102dp"
        android:layout_height="71dp"
        android:background="@drawable/image"
        tools:src="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:layout_marginTop="20dp"
        android:minHeight="80dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="별명" />

        <TextView
            android:id="@+id/my_introduce"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:text="나의 별명은?" />

        <TextView
            android:id="@+id/text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="아이디" />

        <TextView
            android:id="@+id/my_id"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:text="나의 아이디는?" />

        <TextView
            android:id="@+id/text_family_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="우리 가족 코드" />

        <TextView
            android:id="@+id/my_fcode"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="우리 가족 코드" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mun2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="문의 : 013-111-0912" />

        <TextView
            android:id="@+id/gamnamoo_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gammnamooo@gmail.com" />
    </LinearLayout>
</LinearLayout>