<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff"
    tools:context="com.example.persimmon_tree_proj.PopupcalActivity">

    <LinearLayout
        android:layout_width="358dp"
        android:layout_height="262dp"
        android:background="@drawable/line_dungle"
        android:orientation="vertical"
        android:padding="24dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="33dp">

        <TextView
            android:id="@+id/yearmonth_text"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="오늘의 일정"
            android:textColor="#B9B3BD"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/day_text"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="오늘의 일정"
            android:textColor="#B9B3BD"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/our_plan"
            android:layout_width="317dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:textColor="#000"
            android:text="요기에~ 일정이~ 들어갈~ 것임"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="mOnClose"
                android:padding="16dp"
                android:src="@drawable/close_btn"
                android:textAlignment="viewEnd"
                android:textColor="#ff7a00"
                android:background="#ffffff"

                tools:ignore="RtlCompat" />
        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>