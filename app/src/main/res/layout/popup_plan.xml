<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_height="90dp"
    android:maxHeight="200dp"
    android:padding="10dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/image_background"
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/btn_brightgray_rounded"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="5dp" />

    <ImageView
        android:id="@+id/member_color"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/planpopup_dungle_line"
        android:clickable="true"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="@+id/image_background"
        app:layout_constraintTop_toTopOf="@+id/image_background" />

    <ImageView
        android:id="@+id/member_gam"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="@+id/member_color"
        app:layout_constraintTop_toTopOf="@+id/member_color" />


    <TextView
        android:id="@+id/member_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/nanumgothicbold"
        android:padding="2dp"
        android:textColor="#B9B3BD"
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@+id/member_color"
        app:layout_constraintTop_toTopOf="@+id/image_background" />

    <TextView
        android:id="@+id/member_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/nanumgothicbold"
        android:padding="2dp"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/member_color"
        app:layout_constraintTop_toBottomOf="@+id/member_intro" />


</androidx.constraintlayout.widget.ConstraintLayout>