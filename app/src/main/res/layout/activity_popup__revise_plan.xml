<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff"
    tools:context="com.example.persimmon_tree_proj.Popup_Cal.popup_RevisePlan">

    <LinearLayout
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:background="@drawable/line_dungle"
        android:orientation="vertical"
        android:padding="24dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="33dp">

        <TextView
            android:id="@+id/yearmonth_text"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="오늘의 일정"
            android:fontFamily="@font/nanumsquare_acr"
            android:layout_marginBottom="3dp"
            android:textColor="#B9B3BD"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/day_text"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="오늘의 일정"
            android:textColor="#B9B3BD"
            android:fontFamily="@font/nanumsquare_acr"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/member_color"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/planpopup_dungle_line"
                android:clickable="true"
                android:padding="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:padding="1dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/member_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:textColor="#B9B3BD"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/member_plan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:textColor="#000000"
                    android:singleLine="false"
                    android:background="@drawable/for_popup_style"
                    android:layout_gravity="center_horizontal"
                    android:textSize="15dp" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="bottom">

            <ImageButton
                android:id="@+id/no"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="bottom"
                android:onClick="mOnClose"
                android:scaleType="fitCenter"
                android:src="@drawable/close_btn"
                android:textColor="#ff7a00"/>

            <ImageButton
                android:id="@+id/yes"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="bottom"
                android:src="@drawable/close_btn"
                android:scaleType="fitCenter"
                android:textColor="#ff7a00"
                tools:ignore="RtlCompat" />
        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>