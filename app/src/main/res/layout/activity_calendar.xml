<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.persimmon_tree_proj.Calendar">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:text="언제감"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:id="@+id/con"
            android:layout_width="411dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="58dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="434dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="78dp"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <com.applikeysolutions.cosmocalendar.view.CalendarView
                android:id="@+id/cosmo_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/selectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorAccent"
                android:padding="10dp"
                android:text="Search"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>


    <ImageButton
        android:id="@+id/main_btn"
        android:layout_width="62dp"
        android:layout_height="70dp"
        android:layout_marginStart="136dp"
        android:layout_marginBottom="4dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/calender_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/come_go"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/calender_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="10dp"
        android:background="#00FFFFFF"
        android:drawableBottom="@drawable/calender_"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/calender"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>