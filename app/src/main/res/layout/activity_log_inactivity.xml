    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="393dp"
        android:layout_height="161dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_naver_login">


        <EditText
            android:id="@+id/editText_email"
            android:layout_width="289dp"
            android:layout_height="40dp"
            android:layout_margin="7dp"
            android:layout_marginLeft="47dp"
            android:ems="10"
            android:fontFamily="@font/nanumsquare_acr"
            android:gravity="left"
            android:hint="이메일 주소"
            android:inputType="textEmailAddress"
            android:singleLine="false"
            android:textColor="#000000"
            android:textColorHint="@color/greyColor"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/editText_passWord"
            android:layout_width="289dp"
            android:layout_height="40dp"
            android:layout_margin="7dp"
            android:ems="10"
            android:fontFamily="@font/nanumsquare_acr"
            android:gravity="left"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="@color/greyColor"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_login"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="289dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_orange_rounded"
            android:fontFamily="sans-serif"
            android:text="로그인"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="289dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        android:textColor="#2196F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ll_naver_login"
        android:layout_width="189dp"
        android:layout_height="183dp"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="132dp"
        android:layout_marginRight="123dp"
        android:src="@drawable/login_gambaloon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/btn_googleSignIn"
        android:layout_width="299dp"
        android:layout_height="46dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:bottomLeftRadius="30dp"
        android:bottomRightRadius="30dp"
        android:longClickable="false"
        android:screenReaderFocusable="false"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:soundEffectsEnabled="false"

        android:splitMotionEvents="false"
        android:topLeftRadius="30dp"
        android:topRightRadius="30dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_register"
        tools:ignore="MissingConstraints"></com.google.android.gms.common.SignInButton>

    <ImageView
        android:id="@+id/naverlogin"
        android:layout_width="384dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/naverlogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_googleSignIn" />

    <com.kakao.usermgmt.LoginButton
        android:id="@+id/btn_kakao_login"
        android:layout_width="294dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/naverlogin"
        app:layout_constraintVertical_bias="0.333" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="731dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="계정이 없나요? 회원가입하기"
        android:textColor="#000000"
        android:textSize="9sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_register"
        app:layout_constraintStart_toStartOf="@+id/btn_register"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />


