<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="linearOnClick"
    tools:context="com.example.persimmon_tree_proj.QNA.Answeractivity">

    <TextView
        android:id="@+id/top_orange"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/top_orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/gam_text"
        android:layout_width="59dp"
        android:layout_height="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:src="@drawable/top_write2x"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.002"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.292" />




    <TextView
        android:id="@+id/txt_question2"
        android:layout_width="190dp"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_half_rounded"
        android:fontFamily="@font/nanumsquare_acb"
        android:gravity="center"
        android:padding="5dp"
        android:text="질문"
        android:textColor="#000"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_orange" />

    <EditText
        android:id="@+id/edit_answer"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_grey_rounded"
        android:ems="10"
        android:gravity="start|top"
        android:hint="오늘의 감나무에 답변을 입력해달라감"
        android:inputType="textMultiLine"
        android:fontFamily="@font/nanumsquare_acr"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_question2"
        app:layout_constraintVertical_bias="0.231" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="93dp"
        android:layout_height="75dp"
        android:src="@drawable/gam1"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toTopOf="@+id/edit_answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_question2"
        app:layout_constraintTop_toBottomOf="@+id/top_orange" />

    <Button
        android:id="@+id/btn_answer"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/btn_orange_rounded"
        android:fontFamily="@font/nanumsquare_acb"
        android:text="답변완료"
        android:textColor="#fff"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_answer" />

</androidx.constraintlayout.widget.ConstraintLayout>