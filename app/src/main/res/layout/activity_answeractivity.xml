<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.persimmon_tree_proj.Answeractivity">

    <TextView
        android:id="@+id/top_orange"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/top_orange"
        app:layout_constraintEnd_toEndOf="@+id/btn_mypage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/gam_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:fontFamily="@font/nanumsquare_acdb"
        android:text="왔다"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.002"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.292" />

    <TextView
        android:id="@+id/gam_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/nanumsquare_acdb"
        android:text="감"
        android:textColor="@color/pointColor"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/gam_text"
        app:layout_constraintTop_toTopOf="@+id/gam_text" />

    <ImageButton
        android:id="@+id/btn_mypage2"
        android:layout_width="31dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:background="#FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:srcCompat="@drawable/gam1" />

    <ImageButton
        android:id="@+id/btn_mypage"
        android:layout_width="86dp"
        android:layout_height="52dp"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="30dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:srcCompat="@drawable/gam8" />


    <TextView
        android:id="@+id/txt_question2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/btn_half_rounded"
        android:text="질문"
        app:layout_constraintBottom_toTopOf="@+id/edit_answer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_orange" />

    <EditText
        android:id="@+id/edit_answer"
        android:layout_width="300dp"
        android:layout_height="400dp"

        android:background="@drawable/btn_grey_rounded"
        android:ems="10"
        android:gravity="start|top"
        android:hint="오늘의 감나무에 답변을 입력해달라감"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_gallery"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:background="@null"
        android:src="@drawable/orange_gallery"
        app:layout_constraintBottom_toBottomOf="@+id/edit_answer"
        app:layout_constraintStart_toStartOf="@+id/edit_answer" />


    <Button
        android:id="@+id/btn_answer"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btn_orange_rounded"
        android:fontFamily="@font/nanumsquare_acb"
        android:text="답변완료"
        android:textColor="#fff"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/edit_answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_question2"
        app:layout_constraintTop_toBottomOf="@+id/top_orange" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/mainColor"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageButton
        android:id="@+id/main_btn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/compose_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/setting_btn"
        app:layout_constraintStart_toEndOf="@+id/calendar_btn"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/nanumsquare_acr"
        android:text="왔다감"
        android:layout_marginBottom="8dp"
        android:textColor="#fff"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/main_btn"
        app:layout_constraintStart_toStartOf="@+id/main_btn"
        app:layout_constraintTop_toBottomOf="@+id/main_btn" />

    <ImageButton
        android:id="@+id/setting_btn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginRight="70dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/client_icon"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/nanumsquare_acr"
        android:text="고객의 소리함"
        android:layout_marginBottom="8dp"
        android:textColor="#fff"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/setting_btn"
        app:layout_constraintStart_toStartOf="@+id/setting_btn"
        app:layout_constraintTop_toBottomOf="@+id/setting_btn" />

    <ImageButton
        android:id="@+id/calendar_btn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginLeft="70dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/calendar_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.515" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/nanumsquare_acr"
        android:text="언제감"
        android:textColor="#fff"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/calendar_btn"
        app:layout_constraintStart_toStartOf="@+id/calendar_btn"
        app:layout_constraintTop_toBottomOf="@+id/calendar_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>