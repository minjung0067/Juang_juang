<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.persimmon_tree_proj.Profile.profile_gam">

    <ImageButton
        android:id="@+id/ok_btn"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="#00B1A6A6"
        android:scaleType="fitCenter"
        android:src="@drawable/buttons_large_green2x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gam8" />

    <ImageView
        android:id="@+id/gam1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/btn_drawable"
        android:clickable="true"
        android:longClickable="true"
        android:onClick="Click"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/gam1"
        app:layout_constraintBottom_toBottomOf="@+id/gam2"
        app:layout_constraintEnd_toStartOf="@+id/gam2"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/gam3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_drawable"
        android:clickable="true"
        android:longClickable="true"
        android:onClick="Click"
        android:scaleType="fitCenter"
        android:src="@drawable/gam3"
        app:layout_constraintBottom_toBottomOf="@+id/gam4"
        app:layout_constraintStart_toStartOf="@+id/gam1"
        app:layout_constraintTop_toBottomOf="@+id/gam1" />

    <ImageView
        android:id="@+id/gam2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="76dp"
        android:background="@drawable/btn_drawable"
        android:clickable="true"
        android:longClickable="true"
        android:onClick="Click"
        android:scaleType="fitCenter"
        android:src="@drawable/gam2"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="148dp" />

    <ImageView
        android:id="@+id/gam5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_drawable"
        android:clickable="true"
        android:longClickable="true"
        android:onClick="Click"
        android:scaleType="fitCenter"
        android:padding="2dp"
        android:src="@drawable/gam5"
        app:layout_constraintBottom_toBottomOf="@+id/gam6"
        app:layout_constraintStart_toStartOf="@+id/gam3"
        app:layout_constraintTop_toBottomOf="@+id/gam3" />

    <ImageView
        android:id="@+id/gam4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_drawable"
        android:clickable="true"
        android:longClickable="true"
        android:onClick="Click"
        android:scaleType="fitCenter"
        android:src="@drawable/gam4"
        app:layout_constraintEnd_toEndOf="@+id/gam2"
        app:layout_constraintStart_toStartOf="@+id/gam2"
        app:layout_constraintTop_toBottomOf="@+id/gam2" />

    <ImageView
        android:id="@+id/gam6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_drawable"
        android:clickable="true"
        android:longClickable="true"
        android:onClick="Click"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/gam6"
        app:layout_constraintEnd_toEndOf="@+id/gam4"
        app:layout_constraintStart_toStartOf="@+id/gam4"
        app:layout_constraintTop_toBottomOf="@+id/gam4" />

    <ImageView
        android:id="@+id/gam7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_drawable"
        android:clickable="true"
        android:longClickable="true"
        android:onClick="Click"
        android:scaleType="fitCenter"
        android:src="@drawable/gam7"
        app:layout_constraintBottom_toBottomOf="@+id/gam8"
        app:layout_constraintStart_toStartOf="@+id/gam5"
        app:layout_constraintTop_toBottomOf="@+id/gam5" />

    <ImageView
        android:id="@+id/gam8"
        android:layout_width="89dp"
        android:layout_height="76dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_drawable"
        android:clickable="true"
        android:longClickable="true"
        android:onClick="Click"
        android:scaleType="fitCenter"
        android:src="@drawable/gam8"
        app:layout_constraintEnd_toEndOf="@+id/gam6"
        app:layout_constraintStart_toStartOf="@+id/gam6"
        app:layout_constraintTop_toBottomOf="@+id/gam6" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="내 감 고르기"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>