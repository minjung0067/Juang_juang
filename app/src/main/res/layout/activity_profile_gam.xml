<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile_gam">

    <ImageButton
        android:id="@+id/go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="#00B1A6A6"
        android:src="?attr/homeAsUpIndicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gam"
        android:layout_width="84dp"
        android:layout_height="30dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/shpae"
        android:text="감 친구"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/color"
        android:layout_width="84dp"
        android:layout_height="30dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/shpae"
        android:text="색상"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/gam"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/gam1"
        android:layout_width="128dp"
        android:layout_height="87dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/thickshape"
        android:scaleType="fitCenter"
        android:src="@drawable/gam1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/gam2"
        android:layout_width="128dp"
        android:layout_height="87dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/thickshape"
        android:scaleType="fitCenter"
        android:src="@drawable/gam2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/gam3"
        android:layout_width="128dp"
        android:layout_height="87dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/thickshape"
        android:scaleType="fitCenter"
        android:src="@drawable/gam3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/gam4"
        android:layout_width="128dp"
        android:layout_height="87dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/thickshape"
        android:scaleType="fitCenter"
        android:src="@drawable/gam4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/gam5"
        android:layout_width="128dp"
        android:layout_height="87dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/thickshape"
        android:scaleType="fitCenter"
        android:src="@drawable/gam5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/gam6"
        android:layout_width="128dp"
        android:layout_height="87dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/thickshape"
        android:scaleType="fitCenter"
        android:src="@drawable/gam6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/gam7"
        android:layout_width="128dp"
        android:layout_height="87dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="440dp"
        android:background="@drawable/thickshape"
        android:scaleType="fitCenter"
        android:src="@drawable/gam7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/gam8"
        android:layout_width="128dp"
        android:layout_height="87dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="440dp"
        android:background="@drawable/thickshape"
        android:scaleType="fitCenter"
        android:src="@drawable/gam8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>