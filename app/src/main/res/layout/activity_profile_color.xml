<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.persimmon_tree_proj.profile_color">

    <ImageButton
        android:id="@+id/go_back"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="43dp"
        android:background="#00B1A6A6"
        android:scaleType="fitCenter"
        android:src="@drawable/check_icon_big"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gam"
        android:layout_width="93dp"
        android:layout_height="36dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="84dp"
        android:background="@null"
        android:text="감 캐릭터"
        android:clickable="true"
        android:textSize="14dp"
        android:fontFamily="@font/nanumsquare_acb"
        android:textColor="@color/greyColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/color"
        android:layout_width="93dp"
        android:layout_height="36dp"
        android:layout_marginTop="84dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/btn_orange_rounded"
        android:clickable="true"
        android:fontFamily="@font/nanumsquare_acb"
        android:foreground="@null"
        android:text="색상"
        android:textColor="#fff"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/gam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/gam"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/c1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_drawable"
        android:backgroundTint="#FE8189"
        android:clickable="true"
        android:onClick="Click"
        app:layout_constraintEnd_toEndOf="@+id/gam"
        app:layout_constraintStart_toStartOf="@+id/gam"
        app:layout_constraintTop_toBottomOf="@+id/gam"
        app:layout_goneMarginTop="20dp" />

    <ImageView
        android:id="@+id/c2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_drawable"
        android:clickable="true"
        android:backgroundTint="#FE8E69"
        android:onClick="Click"
        app:layout_constraintBottom_toBottomOf="@+id/c1"
        app:layout_constraintEnd_toEndOf="@+id/color"
        app:layout_constraintStart_toStartOf="@+id/color"
        app:layout_constraintTop_toBottomOf="@+id/color" />

    <ImageView
        android:id="@+id/c4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_drawable"
        android:clickable="true"
        android:backgroundTint="#B7DB79"
        android:onClick="Click"
        app:layout_constraintBottom_toBottomOf="@+id/c3"
        app:layout_constraintEnd_toEndOf="@+id/c2"
        app:layout_constraintStart_toStartOf="@+id/c2"
        app:layout_constraintTop_toBottomOf="@+id/c2" />

    <ImageView
        android:id="@+id/c5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_drawable"
        android:backgroundTint="#87dade"
        android:clickable="true"
        android:onClick="Click"
        app:layout_constraintEnd_toEndOf="@+id/c3"
        app:layout_constraintStart_toStartOf="@+id/c3"
        app:layout_constraintTop_toBottomOf="@+id/c3" />

    <ImageView
        android:id="@+id/c7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_drawable"
        android:backgroundTint="#A1AEE5"
        android:clickable="true"
        android:onClick="Click"
        app:layout_constraintEnd_toEndOf="@+id/c5"
        app:layout_constraintStart_toStartOf="@+id/c5"
        app:layout_constraintTop_toBottomOf="@+id/c5" />

    <ImageView
        android:id="@+id/c6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_drawable"
        android:clickable="true"
        android:backgroundTint="#99CAEB"
        android:onClick="Click"
        app:layout_constraintBottom_toBottomOf="@+id/c5"
        app:layout_constraintEnd_toEndOf="@+id/c4"
        app:layout_constraintStart_toStartOf="@+id/c4"
        app:layout_constraintTop_toBottomOf="@+id/c4" />

    <ImageView
        android:id="@+id/c8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_drawable"
        android:clickable="true"
        android:backgroundTint="#E89CDA"
        android:onClick="Click"
        app:layout_constraintBottom_toBottomOf="@+id/c7"
        app:layout_constraintEnd_toEndOf="@+id/c6"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/c6"
        app:layout_constraintTop_toBottomOf="@+id/c6" />

    <ImageView
        android:id="@+id/c3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_drawable"
        android:backgroundTint="#FEC56C"
        android:clickable="true"
        android:onClick="Click"
        app:layout_constraintEnd_toEndOf="@+id/c1"
        app:layout_constraintStart_toStartOf="@+id/c1"
        app:layout_constraintTop_toBottomOf="@+id/c1"
        app:layout_goneMarginTop="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>