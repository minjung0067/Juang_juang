<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.persimmon_tree_proj.profile_gam_main">

    <TextView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/nanumsquare_acb"
        android:maxLength="10"
        android:clickable="false"
        android:text="우리집 감나무"
        android:textColor="@color/darkgray"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageButton
        android:id="@+id/go_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="28dp"
        android:background="#00B1A6A6"
        android:scaleType="fitCenter"
        android:src="@drawable/go_backk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="0dp"
        tools:layout_conversion_absoluteWidth="0dp" />


    <Button
        android:id="@+id/menu_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:background="@color/WhiteColor"
        android:fontFamily="@font/nanumsquare_acr"
        android:gravity="center"
        android:text="프로필 수정"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_gam"
        android:layout_width="93dp"
        android:layout_height="36dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="140dp"
        android:layout_marginRight="185dp"
        android:background="@drawable/btn_orange_rounded"
        android:clickable="true"
        android:fontFamily="@font/nanumsquare_acb"
        android:text="감 캐릭터"
        android:textColor="#fff"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.305"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_color"
        android:layout_width="93dp"
        android:layout_height="36dp"
        android:layout_marginRight="75dp"
        android:background="@null"
        android:clickable="true"
        android:fontFamily="@font/nanumsquare_acb"
        android:foreground="@null"
        android:text="색상"
        android:textColor="@color/grayColor"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_gam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn_gam"
        app:layout_constraintTop_toTopOf="@+id/btn_gam" />

    <ImageView
        android:id="@+id/gam1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_drawable"
        android:clickable="true"
        android:longClickable="true"
        android:onClick="Click"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/gam1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_gam" />

    <ImageView
        android:id="@+id/gam3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_drawable"
        android:clickable="true"
        android:longClickable="true"
        android:onClick="Click"
        android:scaleType="fitCenter"
        android:src="@drawable/gam3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gam1" />

    <ImageView
        android:id="@+id/gam2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_drawable"
        android:clickable="true"
        android:longClickable="true"
        android:onClick="Click"
        android:scaleType="fitCenter"
        android:src="@drawable/gam2"
        app:layout_constraintStart_toEndOf="@+id/gam3"
        app:layout_constraintTop_toBottomOf="@+id/gam8" />

    <ImageView
        android:id="@+id/gam5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_drawable"
        android:clickable="true"
        android:longClickable="true"
        android:onClick="Click"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/gam5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_color" />

    <ImageView
        android:id="@+id/gam4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_drawable"
        android:clickable="true"
        android:longClickable="true"
        android:onClick="Click"
        android:scaleType="fitCenter"
        android:src="@drawable/gam4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/gam2"
        app:layout_constraintTop_toBottomOf="@+id/gam5" />

    <ImageView
        android:id="@+id/gam6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_drawable"
        android:clickable="true"
        android:longClickable="true"
        android:onClick="Click"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/gam6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gam3" />

    <ImageView
        android:id="@+id/gam7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_drawable"
        android:clickable="true"
        android:longClickable="true"
        android:onClick="Click"
        android:scaleType="fitCenter"
        android:src="@drawable/gam7"
        app:layout_constraintStart_toEndOf="@+id/gam6"
        app:layout_constraintTop_toBottomOf="@+id/gam2" />

    <ImageView
        android:id="@+id/gam8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_drawable"
        android:clickable="true"
        android:longClickable="true"
        android:onClick="Click"
        android:scaleType="fitCenter"
        android:src="@drawable/gam8"
        app:layout_constraintEnd_toStartOf="@+id/gam5"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toEndOf="@+id/gam1"
        app:layout_constraintTop_toBottomOf="@+id/btn_gam" />

    <ImageButton
        android:id="@+id/ok_btn"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:background="#00B1A6A6"
        android:scaleType="fitCenter"
        android:src="@drawable/buttons_large_green2x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gam7" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginBottom="13dp"
        android:background="@color/brightgray"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-28dp" />

    <ImageButton
        android:id="@+id/calendar_btn"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_marginBottom="24dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/calendar_menu_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/main_btn"
        app:layout_constraintStart_toEndOf="@+id/qna_btn" />

    <ImageButton
        android:id="@+id/main_btn"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginBottom="12dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/main_menu_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.64"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/to_do_btn"
        android:layout_width="33dp"
        android:layout_height="30dp"
        android:layout_marginBottom="24dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/todo_menu_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/game_btn"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toEndOf="@+id/main_btn" />

    <ImageButton
        android:id="@+id/game_btn"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/game_menu_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView2" />

    <ImageButton
        android:id="@+id/qna_btn"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/qna_menu_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

