<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.persimmon_tree_proj.Account.more_information_activity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/nanumgothicbold"
        android:text="정보 입력하기"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="324dp"
        android:layout_height="1.5dp"
        android:layout_marginTop="25dp"
        android:background="#F1F0F2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />


    <EditText
        android:id="@+id/editTextName"
        android:layout_width="266dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:fontFamily="@font/nanumgothicbold"
        android:gravity="left"
        android:hint="이름"
        android:inputType="textPersonName"
        android:maxLength="10"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textColorHint="@color/grayColor"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/edit_birth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintVertical_bias="0.921"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edit_birth"
        android:layout_width="266dp"
        android:layout_height="40dp"
        android:layout_margin="7dp"
        android:layout_marginBottom="48dp"
        android:clickable="true"
        android:ems="10"
        android:fontFamily="@font/nanumgothicbold"
        android:gravity="left"
        android:hint="생년월일(ex 20190912)"
        android:inputType="date"
        android:textColor="#000000"
        android:textColorHint="@color/grayColor"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/ok_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.918"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/ok_btn"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="316dp"
        android:background="@drawable/btn_orange_rounded"
        android:fontFamily="@font/nanumgothicbold"
        android:text="다음"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>