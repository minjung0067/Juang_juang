<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.persimmon_tree_proj.Account.more_information_activity">

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="266dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:ems="10"
        android:fontFamily="@font/nanumsquare_acr"
        android:gravity="left"
        android:hint="이름"
        android:inputType="textPersonName"
        android:maxLength="10"
        android:textAllCaps="false"
        android:textColorHint="@color/grayColor"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/edit_birth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.898"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edit_birth"
        android:layout_width="266dp"
        android:layout_height="40dp"
        android:layout_margin="7dp"
        android:layout_marginBottom="48dp"
        android:clickable="true"
        android:ems="10"
        android:fontFamily="@font/nanumsquare_acr"
        android:gravity="left"
        android:hint="생년월일(ex 20190912)"
        android:inputType="date"
        android:textColorHint="@color/grayColor"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.918"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="328dp"
        android:background="@drawable/btn_orange_rounded"
        android:fontFamily="@font/nanumsquare_acb"
        android:text="확인"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>