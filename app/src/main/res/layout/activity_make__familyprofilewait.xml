<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.persimmon_tree_proj.Make_FamilyProfilewait">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="248dp"
        android:layout_height="22dp"
        android:layout_marginTop="83dp"
        android:fontFamily="@font/nanumsquare_acr"
        android:gravity="center"
        android:text="우리집 감나무를 설정해주세요."
        android:textColor="@color/mainColor"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ok_btn"
        android:layout_width="280dp"
        android:layout_height="43dp"
        android:layout_marginTop="47dp"
        android:layout_marginBottom="220dp"
        android:background="@drawable/btn_orange_rounded"
        android:fontFamily="@font/nanumsquare_acb"
        android:text="확인"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/count"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:fontFamily="@font/nanumsquare_acr"
        android:text="함께 할 가족 구성원은 몇 명인가요?"
        android:textColor="#000"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/example3"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/example3"
        android:layout_width="241dp"
        android:layout_height="15dp"
        android:layout_marginTop="3dp"
        android:text="*모든 가족구성원이 가입해야 우리집 감나무가 열려요!"
        android:textColor="@color/greyColor"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/count"
        app:layout_constraintTop_toBottomOf="@+id/question1" />

    <EditText
        android:id="@+id/count"
        android:layout_width="280dp"
        android:layout_height="23dp"
        android:layout_marginTop="28dp"
        android:digits="0123456789"
        android:ems="10"
        android:fontFamily="@font/nanumsquare_acr"
        android:hint="예: 4"
        android:inputType="number"
        android:singleLine="false"
        android:textColor="@color/greyColor"
        android:textColorHint="#939393"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/example3" />

</androidx.constraintlayout.widget.ConstraintLayout>
