<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.persimmon_tree_proj.Make_FamilyProfile">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="148dp"
        android:layout_height="56dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="우리집 감나무를 설정해주세요."
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ok_btn"
        android:layout_width="262dp"
        android:layout_height="43dp"
        android:layout_marginTop="460dp"
        android:layout_marginBottom="220dp"
        android:background="?android:attr/colorMultiSelectHighlight"
        android:text="확인"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/count"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="200dp"
        android:text="함께 할 가족 구성원은 몇 명인가요?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/question2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="159dp"
        android:text="우리가족만의 이름을 지어주세요!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/question1"
        app:layout_constraintTop_toBottomOf="@+id/question1" />

    <TextView
        android:id="@+id/example5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="125dp"
        android:text="*나중에 언제든지 변경할 수 있어요."
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/example3"
        app:layout_constraintTop_toBottomOf="@+id/example3" />

    <TextView
        android:id="@+id/example3"
        android:layout_width="241dp"
        android:layout_height="15dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="8dp"
        android:text="*모든 가족구성원이 가입해야 우리집 감나무가 열려요!"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question1" />

    <EditText
        android:id="@+id/about_family"
        android:layout_width="263dp"
        android:layout_height="45dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:hint="예:화목한 김가네의 주렁주렁 감나무"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:textColor="#777777"
        android:textColorHint="#939393"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/count"
        app:layout_constraintTop_toBottomOf="@+id/count" />

    <EditText
        android:id="@+id/count"
        android:layout_width="263dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="예: 4명"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:textColor="#777777"
        android:textColorHint="#939393"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/example3" />

</androidx.constraintlayout.widget.ConstraintLayout>
