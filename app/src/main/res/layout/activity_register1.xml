<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.persimmon_tree_proj.Account.Registeractivity_1">


    <View
        android:id="@+id/view2"
        android:layout_width="324dp"
        android:layout_height="1.5dp"
        android:layout_marginTop="25dp"
        android:background="#F1F0F2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <View
        android:id="@+id/view3"
        android:layout_width="410dp"
        android:layout_height="10dp"
        android:layout_marginTop="34dp"
        android:background="#F1F0F2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password2" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/nanumgothicbold"
        android:text="회원 가입하기"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_check"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#FF8838"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_email" />

    <TextView
        android:id="@+id/password2"
        android:layout_width="266dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword2" />

    <TextView
        android:id="@+id/password1"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="266dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:fontFamily="@font/nanumgothicbold"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHint="#B9B3BD"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_check" />

    <EditText
        android:id="@+id/editText_email"
        android:layout_width="266dp"
        android:layout_height="40dp"
        android:layout_margin="117dp"
        android:fontFamily="@font/nanumgothicbold"
        android:gravity="left"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="@color/grayColor"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2" />

    <EditText
        android:id="@+id/editTextPassword2"
        android:layout_width="266dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:fontFamily="@font/nanumgothicbold"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHint="#B9B3BD"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password1" />

    <CheckBox
        android:id="@+id/check_all"
        android:layout_width="343dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:height="100dp"
        android:buttonTint="@color/pointColor"
        android:fontFamily="@font/nanumgothicbold"
        android:text="전체동의(선택항목포함)"
        android:textColor="#000"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.573"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="60dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


        </LinearLayout>

    </LinearLayout>


    <CheckBox
        android:id="@+id/check_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:buttonTint="@color/pointColor"
        android:clickable="true"
        android:fontFamily="@font/nanumgothicbold"
        android:text="(선택) 이벤트, 광고성 정보 안내"
        android:textColor="#000000"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/check_2"
        app:layout_constraintTop_toBottomOf="@+id/check_2" />

    <CheckBox
        android:id="@+id/check_1"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:buttonTint="@color/pointColor"
        android:clickable="true"
        android:fontFamily="@font/nanumgothicbold"
        android:text="(필수)이용약관"
        android:textColor="#000000"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_all" />

    <CheckBox
        android:id="@+id/check_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:buttonTint="@color/pointColor"
        android:clickable="true"
        android:fontFamily="@font/nanumgothicbold"
        android:text="(필수) 개인정보 수집 및 이용에 대한 안내"
        android:textColor="#000000"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/check_1"
        app:layout_constraintTop_toBottomOf="@+id/check_1" />

    <Button
        android:id="@+id/btn_view2"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:fontFamily="@font/nanumsquare_acr"
        android:text="보기"
        android:textColor="#9E9E9E"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/check_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.617"
        app:layout_constraintStart_toEndOf="@+id/check_3"
        app:layout_constraintTop_toTopOf="@+id/check_2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_view1"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:text="보기"
        android:textColor="#9E9E9E"
        android:textSize="10sp"
        android:fontFamily="@font/nanumsquare_acr"
        app:layout_constraintBottom_toBottomOf="@+id/check_1"
        app:layout_constraintEnd_toEndOf="@+id/btn_view2"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/btn_view2"
        app:layout_constraintTop_toTopOf="@+id/check_1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_join"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/btn_orange_rounded"
        android:fontFamily="@font/nanumgothicbold"
        android:text="회원가입"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_3" />


</androidx.constraintlayout.widget.ConstraintLayout>