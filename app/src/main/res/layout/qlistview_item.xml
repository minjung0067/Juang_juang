<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="311dp"
        android:layout_height="115dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_brightgray_rounded"
        android:orientation="horizontal"
        android:padding="10dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="67dp">


        <TextView
            android:id="@+id/qlist_questionnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/nanumgothic"
            android:text="몇 번째 감"
            android:textColor="#817889"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/thinline"
            android:layout_width="206dp"
            android:layout_height="1dp"
            android:layout_marginLeft="16.5dp"
            android:layout_marginTop="9.5dp"
            android:background="#B9B3BD"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qlist_questionnum" />

        <TextView
            android:id="@+id/qlist_question"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:fontFamily="@font/nanumsquare_acr"
            android:padding="4dp"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/qlist_gotoQnA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/thinline" />

        <ImageButton
            android:id="@+id/qlist_gotoQnA"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:src="@drawable/btn_gotoq"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>